@inherits DisplayProductsBase

@foreach (var item in Products)
{
    <div class="col-md-3 mb-2">
        <a href="#">
            <div class="card">
                <img class="img-thumbnail" src="@item.ImageURL">
                <div class="card-body">
                    <h5 class="card-title mb-3">@item.Name</h5>
                    <div class="card-text">
                        <b>@item.Price.ToString("0:C2")</b>
                    </div>
                </div>
            </div>
        </a>
    </div>
}